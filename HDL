        'jam4': { title: 'Design Jam 4', subtitle: 'JeffSolves 2026: Community Design Jam', theme: 'Food Access & Health', description: 'A two-week design sprint addressing food insecurity and its connections to chronic disease and health inequity. Teams prototype and pitch community-driven solutions inspired by the spring conversation series.', date: 'Summer 2026 — Date TBA', location: 'Hybrid (asynchronous sprint + live pitch session)', speaker: 'Supported by a Jefferson Student Jam Leader', speakerBio: 'Each Jam also includes a Challenge Partner providing technical expertise and a virtual collaboration platform throughout the sprint.', color: 'blue' }
    };

    function openModal(eventId) {
        const event = eventData[eventId];
        if (!event) return;
        const modal = document.getElementById('eventModal');
        document.getElementById('modalTitle').textContent = event.title;
        document.getElementById('modalSubtitle').textContent = event.subtitle;
        document.getElementById('modalTheme').textContent = event.theme;
        document.getElementById('modalDescription').textContent = event.description;
        document.getElementById('modalDate').textContent = event.date;
        document.getElementById('modalLocation').textContent = event.location;
        document.getElementById('modalSpeaker').textContent = event.speaker;
        document.getElementById('modalSpeakerBio').textContent = event.speakerBio;
        document.getElementById('modalHeader').className = 'modal-header ' + event.color;
        document.getElementById('modalRegisterBtn').className = 'register-button ' + (event.color === 'blue' ? 'blue-btn' : '');
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeModal() {
        document.getElementById('eventModal').classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    function openAllEventsModal() {
        document.getElementById('allEventsModal').classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeAllEventsModal() {
        document.getElementById('allEventsModal').classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    function registerForEvent() {
        alert('Registration links coming soon!');
    }

    document.addEventListener('DOMContentLoaded', function () {
        const cardMap = {
            'card-march': 'march',
            'card-may-refugee': 'may-refugee',
            'card-may-food': 'may-food',
            'card-june-conv': 'june-conv',
            'card-jam1': 'jam1',
            'card-jam2': 'jam2',
            'card-jam3': 'jam3',
            'card-jam4': 'jam4'
        };
        Object.entries(cardMap).forEach(([cardId, eventId]) => {
            const card = document.getElementById(cardId);
            if (card) card.addEventListener('click', () => openModal(eventId));
        });
    });

    window.onclick = function (e) {
        if (e.target == document.getElementById('eventModal')) closeModal();
        if (e.target == document.getElementById('allEventsModal')) closeAllEventsModal();
    };

    document.querySelectorAll('.expandable-header').forEach(header => {
        header.addEventListener('click', function () {
            const card = this.closest('.expandable-card');
            const isActive = card.classList.contains('active');
            document.querySelectorAll('.expandable-card').forEach(c => c.classList.remove('active'));
            if (!isActive) card.classList.add('active');
        });
    });
</script>
</body>
