<script>
    const eventData = {
        'march': { title: 'March 19, 2026', subtitle: 'Health Access Conversation #1', theme: 'The State of Health Access in Philly', description: 'How neighborhood resources, transportation, and infrastructure shape a person\'s ability to access care. Join us to hear from the organizations working every day to bridge these gaps across Philadelphia.', date: 'March 19, 2026', location: 'TBD', speaker: 'Accelerate Health Equity and FQHC', speakerBio: 'Two Philadelphia-based organizations doing groundbreaking work to expand health access and community care across the city.', color: 'orange' },
